[Unit]
Description=Open5GS SGW-C Daemon
After=network-online.target

[Service]
Type=simple

User=open5gs
Group=open5gs

Restart=always
ExecStart=/home/julius/dev/5g-wiki/open5gs/install/bin/open5gs-sgwcd -c /home/julius/dev/5g-wiki/open5gs/install/etc/open5gs/sgwc.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
